#------------------------------
# Prompt
#------------------------------

autoload -U promptinit
promptinit

setopt prompt_subst
autoload -Uz vcs_info

zstyle ':vcs_info:*' enable git svn hg
zstyle ':vcs_info:(hg*|git*):*' get-revision true
zstyle ':vcs_info:(hg*|git*):*' check-for-changes true
zstyle ':vcs_info:*' unstagedstr " (%F{red}!%F)"

zstyle ':vcs_info:*' actionformats '%F{029}%b%F'
zstyle ':vcs_info:*' formats '%F{029}%b%F%u'
zstyle ':vcs_info:(sv[nk]|bzr):*' branchformat '%b:%r'


# or use pre_cmd, see man zshcontrib
vcs_info_wrapper() {
  vcs_info
  if [ -n "$vcs_info_msg_0_" ]; then
    echo "${vcs_info_msg_0_}$del"
  fi
}

# prompt bigfade

local curdir="%~"
local hostname="%M"
local username="%n"
local bold="%B"
local unbold="%b"
local standout="%S"
local unstandout="%s"
local colorfg="%F"
local uncolorfg="%f"
local colorbg="%K"
local uncolorbg="%k"
local mytime="%*"
local mydate="%D"
local line_tty="%y"
local rootorwhat="%#"
local return_status="%?"
local host_color="{red}"

# preview colors
# for code in {000..255}; do print -P -- "$code: %F{$code}Test%f"; done

PROMPT="$colorfg{29}$curdir$uncolorfg $bold$colorfg{102}|$uncolorfg$unbold $colorfg{102}%(!.$bold$colorfg{red}.)$username$unbold$uncolorfg$colorfg{088}:$uncolorfg$colorfg$host_color$hostname$uncolorfg$colorfg{102} $return_status $colorfg{240}Â» $uncolorfg"

RPROMPT=$'$(vcs_info_wrapper)'
