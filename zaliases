# Systemd
alias syctl="sudo systemctl"
alias start="sudo systemctl start"
alias stop="sudo systemctl stop"
alias restart="sudo systemctl restart"
alias status="sudo systemctl status"
# alias enable="sudo systemctl enable"
alias disable="sudo systemctl disable"
alias ls-enabled="systemctl list-unit-files | grep enabled"
alias ls-failed="sudo systemctl --failed"

# journalctl
alias jxf="sudo journalctl -xf"
alias jb="sudo journalctl -b"
alias jerr="sudo journalctl -b -p err" # Only show errors since last boot
alias ju="sudo journalctl -u" # By unit

# Pacman
alias p="sudo pacman"
alias pup="sudo pacman -Syu" # Synchronize with repositories before upgrading packages that are out of date on the local system.
alias prm="sudo pacman -Rns" # Remove the specified package(s), its configuration(s) and unneeded dependencies

# Yaourt
alias y="yaourt"
alias yasdep='yaourt -S --asdeps' # Install given package(s) as dependencies of another package
alias ycl="yaourt -Scc"
alias ylu="sudo rm -rf /var/lib/pacman/db.lck"
alias ync="yaourt -S --noconfirm"
alias yq="yaourt -Q"
alias yqo="yaourt -Qo"
alias yrm="yaourt -Rsn"
alias yrf="yaourt -Rcsn"
alias yu="yaourt -U"
alias yup="yaourt -Syu --aur && /etc/cron.hourly/refresh-pacman_db 2>/dev/null"
alias yupnc="yaourt -Syu --noconfirm --aur && /etc/cron.hourly/refresh-pacman_db 2>/dev/null"

